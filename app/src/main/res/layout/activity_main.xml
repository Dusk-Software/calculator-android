<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dusk.calculator.MainActivity">

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button_Seven"
        android:layout_toRightOf="@+id/Button_Seven"
        android:layout_toEndOf="@+id/Button_Seven"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Zero" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Two"
        android:layout_alignBaseline="@+id/Button_One"
        android:layout_alignBottom="@+id/Button_One"
        android:layout_toRightOf="@+id/Button_One"
        android:layout_toEndOf="@+id/Button_One" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Three"
        android:layout_alignBaseline="@+id/Button_Two"
        android:layout_alignBottom="@+id/Button_Two"
        android:layout_toRightOf="@+id/Button_Two"
        android:layout_toEndOf="@+id/Button_Two" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button_One"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Four" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Five"
        android:layout_alignBaseline="@+id/Button_Four"
        android:layout_alignBottom="@+id/Button_Two"
        android:layout_toRightOf="@+id/Button_Four"
        android:layout_toEndOf="@+id/Button_Four" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Six"
        android:layout_alignBaseline="@+id/button14"
        android:layout_alignBottom="@+id/button14"
        android:layout_toRightOf="@+id/Button_Five"
        android:layout_toEndOf="@+id/Button_Five" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button_Four"
        android:layout_alignLeft="@+id/Button_Four"
        android:layout_alignStart="@+id/Button_Four"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Seven" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Eight"
        android:layout_alignBaseline="@+id/Button_Seven"
        android:layout_alignBottom="@+id/Button_Seven"
        android:layout_toRightOf="@+id/Button_Four"
        android:layout_toEndOf="@+id/Button_Four" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button_Eight"
        android:layout_toRightOf="@+id/Button_Five"
        android:layout_toEndOf="@+id/Button_Five"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_Nine" />



    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Button_Zero"
        android:layout_alignLeft="@+id/Button_Seven"
        android:layout_alignStart="@+id/Button_Seven"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/button11" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button_Eight"
        android:layout_toRightOf="@+id/Button_Eight"
        android:layout_toEndOf="@+id/Button_Eight"
        android:id="@+id/button12" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button13"
        android:layout_toRightOf="@+id/Button_Six"
        android:layout_toEndOf="@+id/Button_Six"
        android:id="@+id/button14" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button14"
        android:layout_toRightOf="@+id/Button_Nine"
        android:layout_toEndOf="@+id/Button_Nine"
        android:id="@+id/button15" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button_Nine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button16" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:layout_alignBaseline="@+id/Button_Three"
        android:layout_alignBottom="@+id/Button_Three"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="NumericButtonOnClickListener"
        android:id="@+id/Button_One"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
