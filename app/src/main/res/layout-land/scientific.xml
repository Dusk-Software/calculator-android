<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dusk.calculator.MainActivity"
    android:theme="@style/ScientificTheme">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/three"
        android:id="@+id/plus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignRight="@+id/minus"
        android:layout_alignEnd="@+id/minus" />

    <Button
        android:text="e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/e"
        android:layout_toRightOf="@+id/tan"
        android:layout_toEndOf="@+id/tan"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:id="@+id/six" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/six"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:id="@+id/five" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/one"
        android:layout_toLeftOf="@+id/five"
        android:layout_toStartOf="@+id/five"
        android:id="@+id/four" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seven"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:id="@+id/eight" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/eight"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:id="@+id/nine" />

    <Button
        android:text="tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cos"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:id="@+id/tan"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="tanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tan"
        android:layout_toRightOf="@+id/cos"
        android:layout_toEndOf="@+id/cos"
        android:id="@+id/tanh"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:layout_above="@+id/plus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignRight="@+id/plus"
        android:layout_alignEnd="@+id/plus"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        android:layout_above="@+id/divide"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignRight="@+id/divide"
        android:layout_alignEnd="@+id/divide"
        android:layout_alignLeft="@+id/divide"
        android:layout_alignStart="@+id/divide" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zero"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/equal"
        android:layout_toStartOf="@+id/equal" />

    <Button
        android:text="ANS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/zero"
        android:layout_toStartOf="@+id/zero" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ans"
        android:layout_toStartOf="@+id/ans" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:layout_above="@+id/equal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seven"
        android:layout_alignBaseline="@+id/multiply"
        android:layout_alignBottom="@+id/multiply"
        android:layout_toRightOf="@+id/divide"
        android:layout_toEndOf="@+id/divide" />

    <Button
        android:text="sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/plus"
        android:layout_toStartOf="@+id/plus" />

    <Button
        android:text="Cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/plus"
        android:layout_alignBottom="@+id/plus"
        android:layout_toLeftOf="@+id/plus"
        android:layout_toStartOf="@+id/plus" />

    <Button
        android:text="cosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cosh"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/cos"
        android:layout_alignBottom="@+id/cos"
        android:layout_toLeftOf="@+id/sin"
        android:layout_toStartOf="@+id/sin" />

    <Button
        android:text="ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ln"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/cosh"
        android:layout_alignBottom="@+id/cosh"
        android:layout_toLeftOf="@+id/cosh"
        android:layout_toStartOf="@+id/cosh" />

    <Button
        android:text="sinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sinh"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ln"
        android:layout_toEndOf="@+id/ln" />

    <Button
        android:text="x!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/factorial"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ln"
        android:layout_alignStart="@+id/ln" />

    <Button
        android:text="log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/log"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/tanh"
        android:layout_alignBottom="@+id/tanh"
        android:layout_toLeftOf="@+id/tanh"
        android:layout_toStartOf="@+id/tanh" />

    <Button
        android:text="π"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pi"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/multiply"
        android:layout_alignBottom="@+id/multiply"
        android:layout_toRightOf="@+id/C.B."
        android:layout_toEndOf="@+id/C.B." />

    <Button
        android:text=")"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C.B."
        android:layout_alignBaseline="@+id/pi"
        android:layout_alignBottom="@+id/pi"
        android:layout_toLeftOf="@+id/log"
        android:layout_toStartOf="@+id/log" />

    <Button
        android:text="("
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/O.B."
        android:layout_alignBaseline="@+id/C.B."
        android:layout_alignBottom="@+id/C.B."
        android:layout_toLeftOf="@+id/C.B."
        android:layout_toStartOf="@+id/C.B." />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DEGorRAD"
        android:textOff="rad"
        android:textOn="deg"
        android:layout_below="@+id/O.B."
        android:layout_alignLeft="@+id/ln"
        android:layout_alignStart="@+id/ln" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:layout_alignBaseline="@+id/plus"
        android:layout_alignBottom="@+id/plus"
        android:layout_toRightOf="@+id/plus"
        android:layout_toEndOf="@+id/plus" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:layout_alignBaseline="@+id/tan"
        android:layout_alignBottom="@+id/tan"
        android:layout_toRightOf="@+id/ans"
        android:layout_toEndOf="@+id/ans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/border"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/clear"
        android:layout_alignStart="@+id/clear"
        android:layout_above="@+id/e" />

    <Button
        android:text="xⁿ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/power"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/log"
        android:layout_alignBottom="@+id/log"
        android:layout_toRightOf="@+id/ln"
        android:layout_toEndOf="@+id/ln" />

    <Button
        android:text="AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:layout_alignTop="@+id/e"
        android:layout_alignLeft="@+id/O.B."
        android:layout_alignStart="@+id/O.B."
        android:layout_marginTop="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/border"
        android:layout_above="@+id/eight"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/O.B."
        android:layout_toEndOf="@+id/O.B."
        android:layout_alignTop="@+id/clear" />

</RelativeLayout>